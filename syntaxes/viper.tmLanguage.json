{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Viper",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#characters"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#types"
		},
		{
			"include": "#integers"
		},
		{
			"include": "#identifiers"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.double-slash.vpr",
					"match":"[//]{2}.*"
				},
				{
					"name": "comment.block.vpr",
					"match": "/\\*[\\s\\S]*\\*/"
				}
			]
		},
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.vpr",
					"match": "\\b(return|if|else|while|for|switch|break|continue)\\b"
				},
				{
					"name": "keyword.other.vpr",
					"match": "\\b(let|global|func|import|export|using|struct|private|namespace|enum|this|sizeof|case|default)\\b"
				},
				{
					"name": "constant.language",
					"match": "\\b(true|false|nullptr)\\b"
				}
			]
		},
		"types": {
			"patterns": [
				{
					"name": "storage.type.vpr",
					"match": "\\b(bool|void|i8|i16|i32|i64|u8|u16|u32|u64)\\b[\\*]*"
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "variable.other.vpr",
					"match": "@?[+a-zA-Z_]\\w*"
				}
			]
		},
		"integers": {
			"name": "integer.vpr",
			"patterns": [
				{
					"name": "constant.numeric.dec.vpr",
					"match": "[0-9]+"
				},
				{
					"name": "constant.numeric.hex.vpr",
					"match": "0x[0-9a-f]"
				},
				{
					"name": "constant.numeric.oct.vpr",
					"match": "0[0-7]+"
				},
				{
					"name": "constant.numeric.bin.vpr",
					"match": "0b[0|1]+"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.vpr",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.vpr",
					"match": "\\\\."
				}
			]
		},
		"characters": {
			"name": "constant.character.vpr",
			"begin": "'",
			"end": "'",
			"patterns": [
				{
					"name": "constant.character.escape.vpr",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.vpr"
}